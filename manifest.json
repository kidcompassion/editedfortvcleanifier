
{
  "manifest_version": 2,

  "name": "TBS Cleanifier",
  "version": "1.0",
  "permissions": [
    "tabs", "http://*/*"
  ],
  "description": "The only Chrome Extension with the guts to clean up the internet",
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "name": "Manipulate DOM",
    "icons": ["icon.png"],
    "default_icon": "icon.png"
  },

  "web_accessible_resources": ["background.js"]
}